
@{
    ViewBag.Title = "title";
    Layout = "_AuthLayout";
}

<div class="row">
    <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
    <div class="col-lg-6">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
                <p class="mb-4">We get it, stuff happens. Just enter your email address below
                    and we'll send you a link to reset your password!</p>
            </div>
            <form class="user">
                <div class="mb-3">
                    <input type="email" class="form-control form-control-user"
                           id="exampleInputEmail" aria-describedby="emailHelp"
                           placeholder="Enter Email Address...">
                </div>
                <a asp-area="Accounts" asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-user w-100">
                    Reset Password
                </a>
            </form>
            <hr>
            <div class="text-center">
                <a class="small" asp-area="Accounts" asp-controller="Auth" asp-action="Signup">Create an Account!</a>
            </div>
            <div class="text-center">
                <a class="small" asp-area="Accounts" asp-controller="Auth" asp-action="Login">Already have an account? Login!</a>
            </div>
        </div>
    </div>
</div>
