@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-sm-flex align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Thêm mới ngành kinh doanh</h6>
            <a asp-controller="Categories" asp-action="Major" class="d-none d-sm-inline-block">
                <i class="fas fa-download fa-sm text-white-50 pr-1"></i>
                Hủy
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="form-row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label for="biName" class="font-weight-bold">Tên</label>
                    <input type="text"
                           id="biName"
                           class="form-control bg-light border-0 small"
                           placeholder="Tên">
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label for="biLevel" class="font-weight-bold">Cấp</label>
                    <input type="text"
                           id="biLevel"
                           class="form-control bg-light border-0 small"
                           placeholder="Cấp">
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label for="biNote" class="font-weight-bold">Ghi chú</label>
                    <input type="text"
                           id="biNote"
                           class="form-control bg-light border-0 small"
                           placeholder="Ghi chú">
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="d-sm-flex align-items-center justify-content-between">
            <button type="submit" class="btn btn-primary">
                Lưu
            </button>
        </div>
    </div>
</div>
