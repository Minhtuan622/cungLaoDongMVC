@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<!-- Page Heading -->
<div class="d-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-2 text-gray-800">Thông tin chi tiết</h1>
    <a asp-controller="Employees" asp-action="Update" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-pen fa-sm text-white-50 me-1"></i>
        Chỉnh sửa
    </a>
</div>

<!-- Thông tin người lao động -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">Thông tin cá nhân</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 mb-3">
                <span class="fw-bold">Họ và tên:</span>
                <span class="text-primary" id="ho_ten">Nguyễn Văn A</span>
            </div>
            <div class="col-md-6 mb-3">
                <span class="fw-bold">Ngày sinh:</span>
                <span class="text-primary" id="ngay_sinh">01/01/1990</span>
            </div>
            <div class="col-md-6 mb-3">
                <span class="fw-bold">Giới tính:</span>
                <span class="text-primary" id="gioi_tinh">Nam</span>
            </div>
            <div class="col-md-6 mb-3">
                <span class="fw-bold">Số CCCD:</span>
                <span class="text-primary" id="cccd">123456789012</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <span class="fw-bold">Tỉnh/TP thường trú:</span>
                <span class="text-primary" id="thuong_tru_tinh">Hà Nội</span>
            </div>
            <div class="col-md-4 mb-3">
                <span class="fw-bold">Phường/Xã:</span>
                <span class="text-primary" id="thuong_tru_phuongxa">Quận Ba Đình</span>
            </div>
            <div class="col-md-4 mb-3">
                <span class="fw-bold">Địa chỉ chi tiết:</span>
                <span class="text-primary" id="thuong_tru_diachichitiet">Phố Láng Hạ</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <span class="fw-bold">Tỉnh/TP tạm trú:</span>
                <span class="text-primary" id="tam_tru_tinh">TP.HCM</span>
            </div>
            <div class="col-md-4 mb-3">
                <span class="fw-bold">Phường/Xã:</span>
                <span class="text-primary" id="tam_tru_phuongxa">Quận 1</span>
            </div>
            <div class="col-md-4 mb-3">
                <span class="fw-bold">Địa chỉ chi tiết:</span>
                <span class="text-primary" id="tam_tru_diachichitiet">Phố Nguyễn Huệ</span>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">Đối tượng ưu tiên</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 mb-3">
                <span class="fw-bold">Người khuyết tật:</span>
                <span class="text-primary" id="khuyt_tat">Không</span>
            </div>
            <div class="col-md-4 mb-3">
                <span class="fw-bold">Hộ nghèo, cận nghèo:</span>
                <span class="text-primary" id="ho_ngheo">Không</span>
            </div>
            <div class="col-md-4 mb-3">
                <span class="fw-bold">Dân tộc thiểu số:</span>
                <span class="text-primary" id="dan_toc">Không</span>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">Trình độ giáo dục</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 mb-3">
                <span class="fw-bold">Trình độ phổ thông:</span>
                <span class="text-primary" id="trinh_do_pho_thong">Hoàn thành THPT</span>
            </div>
            <div class="col-md-4 mb-3">
                <span class="fw-bold">Trình độ chuyên môn:</span>
                <span class="text-primary" id="trinh_do_chuyen_mon">Đại học</span>
            </div>
            <div class="col-md-4 mb-3">
                <span class="fw-bold">Chuyên ngành đào tạo:</span>
                <span class="text-primary" id="chuyen_nganh">Công nghệ thông tin</span>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary">Tình trạng tham gia hoạt động kinh tế</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 mb-3">
                <span class="fw-bold">Tình trạng:</span>
                <span class="text-primary" id="tinh_trang_viec_lam">Có việc làm</span>
            </div>
        </div>
        <div id="employed-details">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <span class="fw-bold">Vị thế việc làm:</span>
                    <span class="text-primary" id="vi_tri_viec_lam">Làm công ăn lương</span>
                </div>
                <div class="col-md-4 mb-3">
                    <span class="fw-bold">Công việc cụ thể:</span>
                    <span class="text-primary" id="cong_viec">Lập trình viên</span>
                </div>
                <div class="col-md-4 mb-3">
                    <span class="fw-bold">Nơi làm việc:</span>
                    <span class="text-primary" id="noi_lam_viec">Công ty XYZ</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <span class="fw-bold">Tỉnh/TP làm việc:</span>
                    <span class="text-primary" id="lam_viec_tinh">Hà Nội</span>
                </div>
                <div class="col-md-4 mb-3">
                    <span class="fw-bold">Phường/Xã:</span>
                    <span class="text-primary" id="lam_viec_phuongxa">Quận Hoàn Kiếm</span>
                </div>
                <div class="col-md-4 mb-3">
                    <span class="fw-bold">Địa chỉ chi tiết:</span>
                    <span class="text-primary" id="lam_viec_diachichitiet">Phố Hàng Bông</span>
                </div>
            </div>
        </div>
    </div>
</div>

