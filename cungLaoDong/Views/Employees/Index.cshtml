                                <option value="Nhân viên bán hàng">Nhân viên bán hàng</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="trinh_do_dao_tao_hien_tai" class="form-label font-weight-bold">Trình độ đào tạo hiện tại</label>
                            <select class="form-control" id="trinh_do_dao_tao_hien_tai">
                                <option value="">Tất cả</option>
                                <option value="Sơ cấp">Sơ cấp</option>
                                <option value="Cao đẳng">Cao đẳng</option>
                                <option value="Đại học">Đại học</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="chuyen_nganh_hien_tai" class="form-label font-weight-bold">Chuyên ngành hiện tại</label>
                            <select class="form-control" id="chuyen_nganh_hien_tai">
                                <option value="">Tất cả</option>
                                <option value="Cơ khí">Cơ khí</option>
                                <option value="Sư phạm">Sư phạm</option>
                                <option value="Xây dựng">Xây dựng</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="thoi_gian_tot_nghiep" class="form-label font-weight-bold">Thời gian tốt nghiệp</label>
                            <select class="form-control" id="thoi_gian_tot_nghiep">
                                <option value="">Tất cả</option>
                                <option value="07/2024">07/2024</option>
                                <option value="12/2025">12/2025</option>
                                <option value="06/2026">06/2026</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="resetFilter">Xóa bộ lọc</button>
                <button type="button" class="btn btn-primary" id="applyFilter">Áp dụng</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa mục này không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="confirmDeleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/lib/datatables.net-bs5/dataTables.bootstrap5.min.css" asp-append-version="true"/>
}

@section Scripts
{
    <script src="~/lib/datatables.net/dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs5/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/demo/datatables-demo.js" asp-append-version="true"></script>
    @* <script src="js/employees/index.js"></script> *@
    <script>
        const deleteModal = document.getElementById('deleteConfirmModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const url = button.getAttribute('data-url');

            const form = deleteModal.querySelector('#confirmDeleteForm');
            form.setAttribute('action', url);
        });
    </script>
}
