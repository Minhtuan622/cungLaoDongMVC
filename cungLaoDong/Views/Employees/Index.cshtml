@model IEnumerable<cungLaoDong.Models.ViewModels.Employee.EmployeeInfoViewModel>

@{
    ViewBag.Title = "Quản lý người lao động";
    Layout = "_Layout";
}

<div class="card shadow mb-4">
    <div class="card-header">
        <div class="d-sm-flex align-items-center justify-content-between">
            <h6 class="m-0 fw-bold text-primary">Tra cứu thông tin</h6>
            <div class="dropdown">
                <button class="btn border-0 dropdown-toggle" type="button"
                        id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-bars"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end shadow animated--fade-in"
                    aria-labelledby="dropdownMenuButton">
                    <li>
                        <button type="button" class="dropdown-item py-2" data-bs-toggle="modal"
                                data-bs-target="#filterModal">
                            <i class="fas fa-filter pe-2"></i>
                            Lọc dữ liệu
                        </button>
                    </li>
                    <li>    
                        <button class="dropdown-item py-2">
                            <i class="fas fa-download fa-sm pe-2"></i>
                            Xuất danh sách
                        </button>
                    </li>
                    <li>
                        <a class="dropdown-item py-2" asp-controller="Employees" asp-action="Add">
                            &plus; Thêm mới
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable">
                <thead>
                    <tr class="text-primary">
                        <th>Họ và Tên</th>
                        <th>CCCD</th>
                        <th>Ngày Sinh</th>
                        <th>Giới tính</th>
                        <th>Thường trú</th>
                        <th>Tạm trú</th>
                        <th>Tình trạng</th>
                        <th>Lý do không tham gia</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Họ và Tên</th>
                        <th>CCCD</th>
                        <th>Ngày Sinh</th>
                        <th>Giới tính</th>
                        <th>Thường trú</th>
                        <th>Tạm trú</th>
                        <th>Tình trạng</th>
                        <th>Lý do không tham gia</th>
                        <th>Hành động</th>
                    </tr>
                </tfoot>
                <tbody id="laborTable">
                    @if (Model.Any())
                    {
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@(employee.FullName ?? "N/A")</td>
                                <td>@(employee.Identity ?? "N/A")</td>
                                <td>@(employee.Birthday?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>@(employee.Gender ?? "N/A")</td>
                                <td>@(employee.PermanentAddress ?? "")</td>
                                <td>@(employee.TemporaryResidenceAddress ?? "")</td>
                                <td>@(employee.EconomyStatus?.Name ?? "N/A")</td>
                                <td>@(employee.UnemployedReason?.Name ?? "N/A")</td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-primary dropdown-toggle" type="button"
                                            id="dropdownActionBtn" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-bars"></i>
                                        </button>
                                        <ul class="dropdown-menu animated--fade-in" aria-labelledby="dropdownActionBtn">
                                            <li><a class="dropdown-item" asp-controller="Employees" asp-action="Show" asp-route-id="@employee.Id">Xem</a></li>
                                            <li><a class="dropdown-item" asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">Sửa</a></li>
                                            <button
                                                type="button"
                                                class="dropdown-item text-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteConfirmModal"
                                                data-id="@employee.Id"
                                                data-url="@Url.Action("Delete", "Employees", new { id = employee.Id })">
                                                Xóa
                                            </button>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="20" class="text-center">Không có dữ liệu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="filterModalLabel">Lọc Dữ Liệu Người Lao Động</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="filterForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="tinh_trang_hoat_dong" class="form-label font-weight-bold">Tình trạng hoạt động</label>
