                                <option value="Có việc làm">Có việc làm</option>
                                <option value="Thất nghiệp">Thất nghiệp</option>
                                <option value="Không tham gia">Không tham gia</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="trinh_do_chuyen_mon" class="form-label font-weight-bold">Trình độ chuyên môn</label>
                            <select class="form-control" id="trinh_do_chuyen_mon">
                                <option value="">Tất cả</option>
                                <option value="Chưa qua đào tạo">Chưa qua đào tạo</option>
                                <option value="Sơ cấp">Sơ cấp</option>
                                <option value="Trung cấp">Trung cấp</option>
                                <option value="Cao đẳng">Cao đẳng</option>
                                <option value="Đại học">Đại học</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="gioi_tinh" class="form-label font-weight-bold">Giới tính</label>
                            <select class="form-control" id="gioi_tinh">
                                <option value="">Tất cả</option>
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="do_tuoi" class="form-label font-weight-bold">Độ tuổi</label>
                            <select class="form-control" id="do_tuoi">
                                <option value="">Tất cả</option>
                                <option value="15-24">15-24</option>
                                <option value="25-34">25-34</option>
                                <option value="35-44">35-44</option>
                                <option value="45+">45 trở lên</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="tinh_tp" class="form-label font-weight-bold">Tỉnh/TP thường trú</label>
                            <select class="form-control" id="tinh_tp">
                                <option value="">Tất cả</option>
                                <option value="Hà Nội">Hà Nội</option>
                                <option value="TP.HCM">TP.HCM</option>
                                <option value="Đồng Nai">Đồng Nai</option>
                                <option value="Quảng Ninh">Quảng Ninh</option>
                                <option value="Thanh Hóa">Thanh Hóa</option>
                                <option value="Hải Phòng">Hải Phòng</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="doi_tuong_uu_tien" class="form-label font-weight-bold">Đối tượng ưu tiên</label>
                            <select class="form-control" id="doi_tuong_uu_tien">
                                <option value="">Tất cả</option>
                                <option value="Khuyết tật">Khuyết tật</option>
                                <option value="Hộ nghèo">Hộ nghèo</option>
                                <option value="Dân tộc thiểu số">Dân tộc thiểu số</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="tam_tru" class="form-label font-weight-bold">Tỉnh/TP tạm trú</label>
                            <select class="form-control" id="tam_tru">
                                <option value="">Tất cả</option>
                                <option value="Đồng Nai">Đồng Nai</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="trinh_do_pho_thong" class="form-label font-weight-bold">Trình độ phổ thông</label>
                            <select class="form-control" id="trinh_do_pho_thong">
                                <option value="">Tất cả</option>
                                <option value="Chưa học xong Tiểu học">Chưa học xong Tiểu học</option>
                                <option value="Tốt nghiệp Tiểu học">Tốt nghiệp Tiểu học</option>
                                <option value="Tốt nghiệp THCS">Tốt nghiệp THCS</option>
                                <option value="Tốt nghiệp THPT">Tốt nghiệp THPT</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="chuyen_nganh_dao_tao" class="form-label font-weight-bold">Chuyên ngành đào tạo</label>
                            <select class="form-control" id="chuyen_nganh_dao_tao">
                                <option value="">Tất cả</option>
                                <option value="Công nghệ thông tin">Công nghệ thông tin</option>
                                <option value="Kế toán">Kế toán</option>
                                <option value="Du lịch">Du lịch</option>
                                <option value="Xây dựng">Xây dựng</option>
                                <option value="Cơ khí">Cơ khí</option>
                                <option value="Điều dưỡng">Điều dưỡng</option>
                                <option value="Luật">Luật</option>
                                <option value="Kinh tế">Kinh tế</option>
                                <option value="Marketing">Marketing</option>
                                <option value="Nông nghiệp">Nông nghiệp</option>
                                <option value="May công nghiệp">May công nghiệp</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="vi_the_viec_lam" class="form-label font-weight-bold">Vị thế việc làm</label>
                            <select class="form-control" id="vi_the_viec_lam">
                                <option value="">Tất cả</option>
                                <option value="Chủ cơ sở SXKD">Chủ cơ sở SXKD</option>
                                <option value="Tự làm">Tự làm</option>
                                <option value="Lao động gia đình">Lao động gia đình</option>
                                <option value="Làm công ăn lương">Làm công ăn lương</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="cong_viec" class="form-label font-weight-bold">Công việc</label>
                            <select class="form-control" id="cong_viec">
                                <option value="">Tất cả</option>
                                <option value="Lập trình viên">Lập trình viên</option>
                                <option value="Hướng dẫn viên du lịch">Hướng dẫn viên du lịch</option>
                                <option value="Nhân viên ngân hàng">Nhân viên ngân hàng</option>
                                <option value="Y tá">Y tá</option>
                                <option value="Luật sư">Luật sư</option>
                                <option value="Công nhân xây dựng">Công nhân xây dựng</option>
                                <option value="Chủ cửa hàng">Chủ cửa hàng</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="noi_lam_viec" class="form-label font-weight-bold">Nơi làm việc</label>
                            <select class="form-control" id="noi_lam_viec">
                                <option value="">Tất cả</option>
                                <option value="Hà Nội">Hà Nội</option>
                                <option value="TP.HCM">TP.HCM</option>
                                <option value="Đồng Nai">Đồng Nai</option>
                                <option value="Quảng Ninh">Quảng Ninh</option>
                                <option value="Thanh Hóa">Thanh Hóa</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="thoi_gian_that_nghiep" class="form-label font-weight-bold">Thời gian thất nghiệp</label>
                            <select class="form-control" id="thoi_gian_that_nghiep">
                                <option value="">Tất cả</option>
                                <option value="Dưới 3 tháng">Dưới 3 tháng</option>
                                <option value="Từ 3 tháng đến 1 năm">Từ 3 tháng đến 1 năm</option>
                                <option value="Trên 1 năm">Trên 1 năm</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="nhu_cau_viec_lam" class="form-label font-weight-bold">Nhu cầu việc làm</label>
                            <select class="form-control" id="nhu_cau_viec_lam">
                                <option value="">Tất cả</option>
                                <option value="Kế toán viên">Kế toán viên</option>
                                <option value="Công nhân xây dựng">Công nhân xây dựng</option>
                                <option value="Kỹ thuật viên cơ khí">Kỹ thuật viên cơ khí</option>
                                <option value="Kỹ thuật viên điện tử">Kỹ thuật viên điện tử</option>
