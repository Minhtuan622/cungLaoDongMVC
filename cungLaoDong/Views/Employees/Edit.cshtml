                            <option value="1">Chưa hoàn thành tiểu học</option>
                            <option value="2">Hoàn thành tiểu học</option>
                            <option value="3">Hoàn thành trung học cơ sở</option>
                            <option value="4">Hoàn thành trung học phổ thông</option>
