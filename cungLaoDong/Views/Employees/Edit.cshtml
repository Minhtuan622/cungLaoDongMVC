                                <option value="5602">Dược học</option>
                            </optgroup>
                            <optgroup label="Luật & Giáo dục">
                                <option value="5801">Luật</option>
                                <option value="5901">Sư phạm Toán học</option>
                                <option value="5902">Sư phạm Ngữ văn</option>
                            </optgroup>
                            <option value="9999">Khác</option>
                        </select>
                    </div>
                </div>
            </section>

            <section class="form-section">
                <h5 class="border-start border-primary border-5 ps-2 text-primary">Tình trạng tham gia hoạt động kinh tế <span class="text-danger">*</span></h5>
                <div class="mb-3">
                    <label for="tinh_trang_viec_lam" class="form-label fw-bold">Tình trạng</label>
                    <select class="form-select" id="tinh_trang_viec_lam" required>
                        <option value="">-- Chọn tình trạng --</option>
                        <option value="1">Có việc làm</option>
                        <option value="2">Thất nghiệp</option>
                        <option value="3">Không tham gia hoạt động kinh tế</option>
                    </select>
                    <div class="invalid-feedback">Vui lòng chọn tình trạng việc làm.</div>
                </div>
                <div id="employment-details" style="display: none;"></div>
            </section>

