@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 fw-bold text-primary">Thông tin tài khoản Admin</h6>
        <a asp-controller="Profile" asp-action="Index" class="btn p-0 text-danger fw-bold fs-4">
            &times; Hủy
        </a>
    </div>
    <div class="card-body">
        <div class="row g-4">
            <div class="col-md-4 text-center">
                <label class="fw-bold mb-4 d-block">Ảnh đại diện</label>
                <div class="mb-3">
                    <img src="img/undraw_profile.svg" alt="Avatar"
                         class="rounded-circle border" id="avatarPreview"
                         style="width: 150px; height: 150px; object-fit: cover;">
                </div>
                <div class="mb-3">
                    <label for="avatar" class="form-label">Chọn ảnh đại diện</label>
                    <input class="form-control" type="file" id="avatar" accept="image/*"
                           onchange="previewAvatar()">
                </div>
            </div>
            <div class="col-md-8">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="name" class="form-label fw-bold">Họ và tên:</label>
                        <input type="text" id="name" class="form-control" placeholder="Họ và tên">
                    </div>
                    <div class="col-md-6">
                        <label for="email" class="form-label fw-bold">Email:</label>
                        <input type="text" id="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="col-md-6">
                        <label for="phone" class="form-label fw-bold">Số điện thoại:</label>
                        <input type="text" id="phone" class="form-control" placeholder="Số điện thoại">
                    </div>
                    <div class="col-md-6">
                        <label for="role" class="form-label fw-bold">Vai trò:</label>
                        <input type="text" id="role" class="form-control" placeholder="Vai trò">
                    </div>
                    <div class="col-md-6">
                        <label for="position" class="form-label fw-bold">Chức vụ:</label>
                        <input type="text" id="position" class="form-control" placeholder="Chức vụ">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        function previewAvatar(event) {
            const input = event.target;
            const preview = document.getElementById('avatarPreview');
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
