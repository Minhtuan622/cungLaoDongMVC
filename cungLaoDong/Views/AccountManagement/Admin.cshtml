
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-sm-flex align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Danh mục tài khoản Admin</h6>
            <a asp-controller="AccountManagement" asp-action="AddAdmin" class="d-none d-sm-inline-block">
                &plus; Thêm
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable">
                <thead>
                <tr class="text-primary">
                    <th>Ảnh đại diện</th>
                    <th>Họ tên</th>
                    <th>Liên hệ</th>
                    <th>Chức vụ</th>
                    <th>Vai trò</th>
                    <th>Hành động</th>
                </tr>
                </thead>
                <tbody id="laborTable"></tbody>
            </table>
        </div>
    </div>
</div>
