@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-sm-flex align-items-center justify-content-between">
            <h6 class="m-0 fw-bold text-primary">Tạo mới tài khoản Admin</h6>
            <a href="#" class="d-none d-sm-inline-block">Hủy</a>
        </div>
    </div>
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-lg-3">
                <div class="mb-3 text-center">
                    <label class="fw-bold mb-2" for="avatar">Ảnh đại diện</label>
                    <div class="mb-3">
                        <img id="avatarPreview" src="img/undraw_profile.svg" alt="Avatar" class="rounded-circle border"
                             style="width: 120px; height: 120px; object-fit: cover;">
                    </div>
                    <div class="mb-3">
                        <input type="file" class="form-control" id="avatar" accept="image/*"
                               onchange="previewAvatar()">
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-6 mb-3">
                        <label for="name" class="form-label fw-bold">Tên</label>
                        <input type="text" id="name" class="form-control bg-light border-0 small" placeholder="Tên">
                    </div>
                    <div class="col-lg-6 mb-3">
                        <label for="password" class="form-label fw-bold">Mật khẩu</label>
                        <input type="password" id="password" class="form-control bg-light border-0 small"
                               placeholder="Mật khẩu">
                    </div>
                    <div class="col-lg-6 mb-3">
                        <label for="phone" class="form-label fw-bold">Số điện thoại</label>
                        <input type="text" id="phone" class="form-control bg-light border-0 small"
                               placeholder="Số điện thoại">
                    </div>
                    <div class="col-lg-6 mb-3">
                        <label for="email" class="form-label fw-bold">Email</label>
                        <input type="text" id="email" class="form-control bg-light border-0 small" placeholder="Email">
                    </div>
                    <div class="col-lg-6 mb-3">
                        <label for="position" class="form-label fw-bold">Chức vụ</label>
                        <input type="text" id="position" class="form-control bg-light border-0 small"
                               placeholder="Chức vụ">
                    </div>
                    <div class="col-lg-6 mb-3">
                        <label for="role" class="form-label fw-bold">Vai trò</label>
                        <input type="text" id="role" class="form-control bg-light border-0 small" placeholder="Vai trò">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="d-sm-flex align-items-center justify-content-between">
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        function previewAvatar(event) {
            const input = event.target;
            const preview = document.getElementById('avatarPreview');
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
